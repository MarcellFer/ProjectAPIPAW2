<div class="container mt-4">
    <h1><%= title %></h1>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th>Nama Resep</th>
                <th>Kategori</th>
                <th>Asal <span style="font-size: 16px;">üåç</span></th>
                <th>Waktu Memasak</th>
                <th>Porsi</th>
                <th>Tingkat Kesulitan</th>
            </tr>
        </thead>
        <tbody>
            <% resep.forEach((item, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><strong><%= item.nama %></strong></td>
                    <td><%= item.kategoriId?.nama || '-' %></td>
                    <td>
                        <span style="font-size: 20px;"><%= item.asalId?.bendera %></span>
                        <%= item.asalId?.nama %>
                    </td>
                    <td><%= item.waktuMemasak %> menit</td>
                    <td><%= item.porsi %> porsi</td>
                    <td>
                        <% if(item.tingkatKesulitan === 'mudah') { %>
                            <span class="badge bg-success">Mudah</span>
                        <% } else if(item.tingkatKesulitan === 'sedang') { %>
                            <span class="badge bg-warning">Sedang</span>
                        <% } else { %>
                            <span class="badge bg-danger">Sulit</span>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 1200px;
    }
</style>
